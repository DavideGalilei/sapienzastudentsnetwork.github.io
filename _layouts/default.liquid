<!doctype html>
<html lang="it">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        {% comment %} TODO: better SEO tags {% endcomment %}

        <link rel="icon" href="./favicon.png">

        <link
            rel="stylesheet"
            href="{{ '/assets/css/app.css?v=' | append: site.github.build_revision | relative_url }}"
        >
        <link
            rel="stylesheet"
            href="{{ '/assets/css/tailwind.css?v=' | append: site.github.build_revision | relative_url }}"
        >
        <link
            rel="stylesheet"
            href="{{ '/assets/css/gruvbox.css?v=' | append: site.github.build_revision | relative_url }}"
        >

        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link
            rel="stylesheet"
            href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"
        >
        <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200;400;800&display=swap" rel="stylesheet">

        {% include head.liquid %}
    </head>

    <body class="h-screen flex flex-col md:flex-row">
        {% include navigation.liquid %}

        <div class="w-full min-w-0 md:h-auto flex grow flex-1 bg-gray-50 dark:bg-gray-900 overflow-y-auto overflow-x-hidden">
            <div class="p-5 md:p-10 pt-5 md:pt-10 prose dark:prose-invert grow-1 w-full max-w-full">
                {{ content }}
                <br>
            </div>
        </div>

        {% comment %} <script async src="https://cdnjs.cloudflare.com/ajax/libs/anchor-js/4.1.0/anchor.min.js" integrity="sha256-lZaRhKri35AyJSypXXs4o6OPFTbTmUoltBbDCbdzegg=" crossorigin="anonymous"></script> {% endcomment %}
        {% comment %} <script>anchors.add();</script> {% endcomment %}
    </body>
</html>
